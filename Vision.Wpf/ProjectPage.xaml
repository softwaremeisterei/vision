<Page x:Class="Vision.Wpf.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vision.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"  Loaded="Page_Loaded"
      Title="ProjectPage">

    <Page.Resources>
        <HierarchicalDataTemplate x:Key="FolderNodeTemplate" ItemsSource="{Binding Folders}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Content="📁 " Foreground="Blue"></Label>
                    <Label Content="{Binding Name}">
                        <Label.ContextMenu>
                            <ContextMenu Name="foo">
                                <MenuItem
                                  Tag="{Binding}"
                                  Header="Add node"
                                  Click="ContextMenuFolder_AddNode" 
                             />
                            </ContextMenu>
                        </Label.ContextMenu>
                    </Label>
                </StackPanel>
                <ItemsControl ItemsSource="{Binding Nodes}" Margin="20,0,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Hyperlink NavigateUri="{Binding Url}">
                                    <TextBlock Text="{Binding Name}"></TextBlock>
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </HierarchicalDataTemplate>
    </Page.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button>&lt;</Button>
            <Button>&gt;</Button>
            <Menu Margin="0,0,0,0" Height="22" Name="menu1" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <MenuItem Header="File" Height="20">
                    <MenuItem Header="Save" HorizontalAlignment="Left" Click="mnuFileSave_Click" />
                </MenuItem>
                <MenuItem Header="Content" Height="20">
                    <MenuItem Header="Add toplevel folder" HorizontalAlignment="Left" Click="mnuAddTopLevelFolder_Click" />
                    <MenuItem Header="Add toplevel node" HorizontalAlignment="Left" Click="mnuAddTopLevelNode_Click" />
                </MenuItem>
            </Menu>
        </ToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="236*"/>
                <ColumnDefinition Width="281*"/>
            </Grid.ColumnDefinitions>
            <TreeView Name="treeView1" MinWidth="100" Grid.Column="0"
                      ItemsSource="{Binding Roots}" 
                      ItemTemplate="{StaticResource FolderNodeTemplate}"/>
            <GridSplitter Width="3" Background="Blue" Margin="1.5,0,-1.5,0"/>
            <WebBrowser Name="webBrowser" Grid.Column="1" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Navigating="WebBrowser_Navigating" />
        </Grid>
    </DockPanel>
</Page>
