<UserControl x:Class="Vision.Wpf.TilesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vision.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MouseDown="UserControl_MouseDown">
    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <ItemsControl ItemsSource="{Binding Model.Breadcrumbs}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Background="Transparent">
                                <Label Content=">"/>
                                <TextBlock VerticalAlignment="Center">
                                    <Hyperlink Tag="{Binding}" Click="Breadcrumb_Click">
                                        <TextBlock Text="{Binding NodeView.Name}" Margin="0" Padding="0"/>
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Model.ParentNodeView.Nodes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,5,5" Width="150" Height="150"
                                BorderBrush="Black" Background="{Binding BackgroundColor}"
                                BorderThickness="1" UseLayoutRounding="True" MouseDown="Border_MouseDown" Tag="{Binding}">
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Bottom"  Orientation="Horizontal">
                                        <TextBlock Text="{Binding Nodes.Count}"/>
                                        <Image Source="{Binding ImageSource, UpdateSourceTrigger=PropertyChanged}" Width="25" Height="25" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                        TextWrapping="Wrap"
                                        FontSize="15" FontWeight="Normal" Foreground="{Binding ForegroundColor}"
                                        HorizontalAlignment="Center" Padding="0,0,0,10"/>
                                </DockPanel>
                                <Border.ContextMenu>
                                    <ContextMenu Name="foo">
                                        <MenuItem Tag="{Binding}" Header="Edit" Click="ContextMenuNode_Edit" />
                                        <Separator/>
                                        <MenuItem Tag="{Binding}" Header="Add node" Click="ContextMenuNode_AddNode" />
                                        <MenuItem Tag="{Binding}" Header="Add folder" Click="ContextMenuNode_AddFolder" />
                                        <Separator/>
                                        <MenuItem Tag="{Binding}" Header="Add/remove favorite" Click="ContextMenuNode_ToggleFavorite" />
                                        <Separator/>
                                        <MenuItem Tag="{Binding}" Header="Delete" Click="ContextMenuNode_Delete" />
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </DockPanel>
</UserControl>
